<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"> 

    <xs:element name="animacao">
        <xs:complexType>
            <xs:sequence>
                
                <!-- Começa página Festa de São João -->
                
                <xs:element name="festividade">
                    <xs:complexType>
                        <xs:sequence>
                            
                            <!-- Imagem de inicio -->
                            <xs:element name="imagem_festa">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="descricao" type="xs:string" />
                                        <xs:element name="fonte">
                                            <xs:simpleType>
                                                <xs:restriction base="xs:string"> 
                                                    <xs:pattern value="[hH][tT]{2}[pP][sS]?://[wW]{3}.*" /> 
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:element>
                                        <xs:element name="largura">
                                            <xs:complexType>
                                                <xs:simpleContent>
                                                    <xs:extension base="xs:integer">
                                                        <xs:attribute name="unidade" type="xs:string" />
                                                    </xs:extension>
                                                </xs:simpleContent>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="altura">
                                            <xs:complexType>
                                                <xs:simpleContent>
                                                    <xs:extension base="xs:integer">
                                                        <xs:attribute name="unidade" type="xs:string" />
                                                    </xs:extension>
                                                </xs:simpleContent>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            
                            <!-- Parágrafo festa -->
                            
                            <xs:element name="festa">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="patrono">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="nome">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="idioma" type="xs:string" use="required" />
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="reconhecimento">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="celebracao">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="descricao" type="xs:string" />
                                                                        </xs:sequence>
                                                                        <xs:attribute name="quatificacao" type="xs:string" use="required" />
                                                                    </xs:complexType>
                                                                </xs:element>
                                                                <xs:element name="localizacao">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="local">
                                                                                <xs:complexType>
                                                                                    <xs:simpleContent>
                                                                                        <xs:extension base="xs:string">
                                                                                            <xs:attribute name="continente">
                                                                                                <xs:simpleType>
                                                                                                    <xs:restriction base="xs:string">
                                                                                                        <xs:pattern value="[A-Z][a-z]*" />
                                                                                                    </xs:restriction>
                                                                                                </xs:simpleType>
                                                                                            </xs:attribute>
                                                                                        </xs:extension>
                                                                                    </xs:simpleContent>
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                        </xs:sequence>
                                                                        <xs:attribute name="idioma" type="xs:string" use="required" />
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        
                                        <xs:element name="festividades">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="festividade">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="importancia">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="descricao" type="xs:string" />
                                                                        </xs:sequence>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence> 
                                                <xs:attribute name="cidade">
                                                    <xs:simpleType>
                                                        <xs:restriction base="xs:string">
                                                            <xs:pattern value="[A-Z][a-z]*" />
                                                        </xs:restriction>
                                                    </xs:simpleType>
                                                </xs:attribute>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="manifestacao">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="motivacao">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="descricao" type="xs:string" />
                                                                <xs:element name="efeito">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="localizacao">
                                                                                <xs:complexType>
                                                                                    <xs:sequence>
                                                                                        <xs:element maxOccurs="unbounded" name="local">
                                                                                            <xs:complexType>
                                                                                                <xs:simpleContent>
                                                                                                    <xs:extension base="xs:string">
                                                                                                        <xs:attribute name="cidade">
                                                                                                            <xs:simpleType>
                                                                                                                <xs:restriction base="xs:string">
                                                                                                                    <xs:pattern value="[A-Z][a-z]*" />
                                                                                                                </xs:restriction>
                                                                                                            </xs:simpleType>
                                                                                                        </xs:attribute>
                                                                                                    </xs:extension>
                                                                                                </xs:simpleContent>
                                                                                            </xs:complexType>
                                                                                        </xs:element>
                                                                                    </xs:sequence>
                                                                                    <xs:attribute name="idioma" type="xs:string" use="required"></xs:attribute>
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                            <xs:element name="descricao">
                                                                                <xs:complexType>
                                                                                    <xs:simpleContent>
                                                                                        <xs:extension base="xs:string">
                                                                                            <xs:attribute name="acao" type="xs:string" use="required" />
                                                                                        </xs:extension>
                                                                                    </xs:simpleContent>
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                        </xs:sequence>
                                                                        <xs:attribute name="acao" type="xs:string" use="required" />
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                                <xs:attribute name="tipo" type="xs:string" use="required" />
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="caracteristicas">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element maxOccurs="unbounded" name="caracteristica">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="genero" type="xs:string" use="required" />
                                                                    <xs:attribute name="definicao" type="xs:string" use="required" />
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="particulariedade">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="descricao" type="xs:string" />
                                                    <xs:element name="marca">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="localizacao">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="local">
                                                                                <xs:complexType>
                                                                                    <xs:simpleContent>
                                                                                        <xs:extension base="xs:string">
                                                                                            <xs:attribute name="cidade">
                                                                                                <xs:simpleType>
                                                                                                    <xs:restriction base="xs:string">
                                                                                                        <xs:pattern value="[A-Z][a-z]*" />
                                                                                                    </xs:restriction>
                                                                                                </xs:simpleType>
                                                                                            </xs:attribute>
                                                                                        </xs:extension>
                                                                                    </xs:simpleContent>
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                        </xs:sequence>
                                                                        <xs:attribute name="idioma" type="xs:string" use="required" />
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                            <xs:attribute name="caracteristica" type="xs:string" use="required" />
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="missao">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="panorama" type="xs:string" />
                                                                <xs:element name="motivo">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="descricao" type="xs:string" />
                                                                        </xs:sequence>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                            <xs:attribute name="objetivo" type="xs:string" use="required" />
                                                        </xs:complexType>
                                                    </xs:element> 
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="horarios">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="horario" minOccurs="1">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="fim" type="xs:string" use="required" />
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="descricao" type="xs:string" />
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        
                                        <xs:element name="percursos_festa">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="descricao" type="xs:string" />
                                                    
                                                    <xs:element maxOccurs="unbounded" name="percurso">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="inicio">
                                                                        <xs:simpleType>
                                                                            <xs:restriction base="xs:string">
                                                                                <xs:pattern value="[A-Z][a-z]*" />
                                                                            </xs:restriction>
                                                                        </xs:simpleType>
                                                                    </xs:attribute>
                                                                    <xs:attribute name="fim">
                                                                        <xs:simpleType>
                                                                            <xs:restriction base="xs:string">
                                                                                <xs:pattern value="[A-Z][a-z]*" />
                                                                            </xs:restriction>
                                                                        </xs:simpleType>
                                                                    </xs:attribute>
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="programa">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="datas">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element maxOccurs="unbounded" name="data">
                                                                    <xs:complexType>
                                                                        <xs:simpleContent>
                                                                            <xs:extension base="xs:string">
                                                                                <xs:attribute name="tipo" type="xs:string" use="optional" />
                                                                                <xs:attribute name="genero" type="xs:string" use="optional" />
                                                                                <xs:attribute name="periodo" type="xs:string" use="optional" />
                                                                            </xs:extension>
                                                                        </xs:simpleContent>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element name="agenda">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="atividades">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element maxOccurs="unbounded" name="atividade">
                                                                                <xs:simpleType>
                                                                                    <xs:list itemType="xs:string"/>
                                                                                </xs:simpleType>
                                                                            </xs:element>
                                                                        </xs:sequence>
                                                                        <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                        <xs:attribute name="genero" type="xs:string" use="required" />
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                    <xs:attribute name="nome" type="xs:string" use="required" />
                                    <xs:attribute name="categoria" type="xs:string" use="required" />
                                </xs:complexType>
                            </xs:element>
                            
                            <!-- Vídeo -->
                            
                            <xs:element name="video">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="descricao" type="xs:string" />
                                        <xs:element name="fonte">
                                            <xs:simpleType>
                                                <xs:restriction base="xs:string"> 
                                                    <xs:pattern value="[hH][tT]{2}[pP][sS]?://[a-zA-Z].*" /> 
                                                </xs:restriction>
                                            </xs:simpleType>
                                        </xs:element>
                                    </xs:sequence>
                                    <xs:attribute name="titulo" type="xs:string" use="required" />
                                </xs:complexType>
                            </xs:element>
                            
                            <!-- Parágrafo Tradições -->
                            
                            <xs:element name="tradicoes">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="publicos">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element maxOccurs="unbounded" name="publico">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="genero" type="xs:string" use="optional" />
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="tradicao">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element maxOccurs="unbounded" name="atividade">
                                                        <xs:complexType mixed="true">
                                                            <xs:sequence minOccurs="0">
                                                                <xs:choice maxOccurs="unbounded">
                                                                    <xs:element name="descricao" type="xs:string" />
                                                                    <xs:element name="local" type="xs:string" />
                                                                    <xs:element name="datas">
                                                                        <xs:complexType>
                                                                            <xs:sequence>
                                                                                <xs:element name="data">
                                                                                    <xs:complexType>
                                                                                        <xs:simpleContent>
                                                                                            <xs:extension base="xs:string">
                                                                                                <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                                                <xs:attribute name="periodo" type="xs:string" use="optional" />
                                                                                            </xs:extension>
                                                                                        </xs:simpleContent>
                                                                                    </xs:complexType>
                                                                                </xs:element>
                                                                            </xs:sequence>
                                                                        </xs:complexType>
                                                                    </xs:element>
                                                                    <xs:element name="localizacao">
                                                                        <xs:complexType>
                                                                            <xs:sequence>
                                                                                <xs:element name="local" type="xs:string" />
                                                                            </xs:sequence>
                                                                        </xs:complexType>
                                                                    </xs:element>
                                                                </xs:choice>
                                                            </xs:sequence>
                                                            <xs:attribute name="genero" type="xs:string" use="required" />
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                    <xs:attribute name="nome" type="xs:string" use="required" />
                                    <xs:attribute name="tipo" type="xs:string" use="required" />
                                    <xs:attribute name="genero" type="xs:string" use="optional" />
                                </xs:complexType>
                            </xs:element>
                            
                            <!-- Parágrafo História -->
                            
                            <xs:element name="historia">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="datas">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element maxOccurs="unbounded" name="data">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element maxOccurs="unbounded" name="festas">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element minOccurs="0" name="descricao" type="xs:string" />
                                                    <xs:element minOccurs="0" name="nascimento">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="nome">
                                                                    <xs:complexType>
                                                                        <xs:simpleContent>
                                                                            <xs:extension base="xs:string">
                                                                                <xs:attribute name="idioma" type="xs:string" use="required" />
                                                                            </xs:extension>
                                                                        </xs:simpleContent>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                                
                                                                <xs:element name="datas">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element maxOccurs="unbounded" name="data">
                                                                                <xs:complexType>
                                                                                    <xs:simpleContent>
                                                                                        <xs:extension base="xs:string">
                                                                                            <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                                        </xs:extension>
                                                                                    </xs:simpleContent>
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                        </xs:sequence>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                            <xs:attribute name="tipo" type="xs:string" use="required" />
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element minOccurs="0" name="festa">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="periodo" type="xs:string" use="required" />
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    <xs:element minOccurs="0" name="adoracao">
                                                        <xs:complexType>
                                                            <xs:simpleContent>
                                                                <xs:extension base="xs:string">
                                                                    <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                    <xs:attribute name="genero" type="xs:string" use="optional" />
                                                                    <xs:attribute name="idioma" type="xs:string" use="required" />
                                                                </xs:extension>
                                                            </xs:simpleContent>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    
                                                    <xs:element minOccurs="0" name="comemoracoes">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element maxOccurs="unbounded" name="comemoracao" type="xs:string" />
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    
                                                    <xs:element minOccurs="0" name="ritual">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="compra">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="item">
                                                                                <xs:complexType>
                                                                                    <xs:sequence>
                                                                                        <xs:element name="vegetal" type="xs:string" />
                                                                                        <xs:element name="descricao" type="xs:string" />
                                                                                    </xs:sequence>
                                                                                    <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                                    <xs:attribute name="quantidade" type="xs:unsignedByte" use="required" />
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                        </xs:sequence>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                                <xs:attribute name="periodo" type="xs:string" use="required" />
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="caminhada">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="datas">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element maxOccurs="unbounded" name="data">
                                                                    <xs:complexType>
                                                                        <xs:simpleContent>
                                                                            <xs:extension base="xs:string">
                                                                                <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                            </xs:extension>
                                                                        </xs:simpleContent>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    
                                                    <xs:element name="publicos">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="publico">
                                                                    <xs:complexType>
                                                                        <xs:simpleContent>
                                                                            <xs:extension base="xs:string">
                                                                                <xs:attribute name="participantes" type="xs:string" use="optional" />
                                                                            </xs:extension>
                                                                        </xs:simpleContent>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                    
                                                    <xs:element name="percursos_historia">
                                                        <xs:complexType>
                                                            <xs:sequence>
                                                                <xs:element name="percurso">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="local">
                                                                                <xs:complexType>
                                                                                    <xs:simpleContent>
                                                                                        <xs:extension base="xs:string">
                                                                                            <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                                        </xs:extension>
                                                                                    </xs:simpleContent>
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                            <xs:element name="meio" type="xs:string" />
                                                                        </xs:sequence>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                                <xs:element name="objetivo">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element name="observar" type="xs:string" />
                                                                        </xs:sequence>
                                                                    </xs:complexType>
                                                                </xs:element>
                                                                <xs:element name="compra">
                                                                    <xs:complexType>
                                                                        <xs:sequence>
                                                                            <xs:element maxOccurs="unbounded" name="item">
                                                                                <xs:complexType>
                                                                                    <xs:simpleContent>
                                                                                        <xs:extension base="xs:string">
                                                                                            <xs:attribute name="tipo" type="xs:string" use="required" />
                                                                                            <xs:attribute name="recipiente" type="xs:string" use="optional" />
                                                                                        </xs:extension>
                                                                                    </xs:simpleContent>
                                                                                </xs:complexType>
                                                                            </xs:element>
                                                                        </xs:sequence>
                                                                        <xs:attribute name="local" type="xs:string" use="required" />
                                                                        <xs:attribute name="vendedor" type="xs:string" use="required" />
                                                                    </xs:complexType>
                                                                </xs:element>
                                                            </xs:sequence>
                                                        </xs:complexType>
                                                    </xs:element>
                                                </xs:sequence>
                                                <xs:attribute name="destino" type="xs:string" use="required" />
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
